<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="@dimen/familySelectorItemWidth"
             android:layout_height="@dimen/familySelectorItemHeight"
            android:background="?attr/selectableItemBackgroundBorderless">

    <ImageView
        android:id="@+id/iv_command_family"
        android:layout_width="@dimen/familySelectorIconDimen"
        android:layout_height="@dimen/familySelectorIconDimen"
        android:alpha="0.54"
        android:contentDescription="@string/default_content_desc_command_family"
        android:layout_gravity="center"/>

    <View
        android:id="@+id/v_command_family_underline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/familySelectorUnderlineHeight"
        android:layout_gravity="bottom|center_horizontal"/>
</FrameLayout>